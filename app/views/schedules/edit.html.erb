<div class="text-center">
  <h1><%= @schedule.day %>日目、id:<%= @schedule.id %>のスケジュール編集ページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(model: [@plan, @schedule], local: true) do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      
      <div class="form-group">
        <%= f.label :start_time, "開始時間" %>
        <%= f.text_field :start_time, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :destination, "予定" %>
        <%= f.text_field :destination, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :category, "カテゴリ" %>
        <%= f.text_field :category, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :memo, "メモ" %>
        <%= f.text_field :memo, class: "form-control" %>
      </div>
      
      <%= f.submit "編集完了", class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
